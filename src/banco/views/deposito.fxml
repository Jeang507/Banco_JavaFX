      xmlns:fx="http://javafx.com/fxml"
      fx:controller="banco.controllers.DepositoController"
      alignment="CENTER"
      spacing="20"
      styleClass="card">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="DepÃ³sito" styleClass="title"/>

    <TextField fx:id="txtDeposito"
               promptText="Ingrese monto"
