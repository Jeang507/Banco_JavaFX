<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="banco.controllers.LoginController"
           stylesheets="@../styles/dashboard.css"
           style="-fx-background-color: #F4F6F9;">

    <VBox alignment="CENTER"
          spacing="18"
          styleClass="card">

        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Label text="CHIPIBANK VIRTUAL"
               styleClass="title"
               style="-fx-font-size: 26px;"/>

        <TextField fx:id="txtUsuario"
                   promptText="Usuario"
                   styleClass="input"
                   maxWidth="350"
                   prefWidth="350"
                   minWidth="350"
                   style="-fx-font-size: 15px;"/>

        <PasswordField fx:id="txtPin"
                       promptText="PIN (4 dígitos)"
                       styleClass="input"
                       maxWidth="350"
                       prefWidth="350"
                       minWidth="350"
                       style="-fx-font-size: 15px;"/>

        <Button text="Iniciar Sesión"
                onAction="#iniciarSesion"
                styleClass="primary-btn"
                prefWidth="350"
                style="-fx-font-size: 16px;"/>

        <Hyperlink text="Crear una cuenta"
                   style="-fx-font-size: 14px;"
                   onAction="#irAlRegistro"/>

        <Label fx:id="lblError"
               textFill="red"
               style="-fx-font-size: 14px;"
               visible="false"/>
    </VBox>

</StackPane>
